<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
  <servlet-mapping>
    <servlet-name>AddFavorite</servlet-name>
    <url-pattern>/lab/favorite/add</url-pattern>
  </servlet-mapping>


  <display-name>Archetype Created Web Application</display-name>
  <filter>
    <filter-name>Utf8</filter-name>
    <filter-class>filter.Utf8</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>Permission</filter-name>
    <filter-class>filter.Permission</filter-class>
  </filter>
  <filter>
    <filter-name>Authorization</filter-name>
    <filter-class>filter.Authorization</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>Permission</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>Authorization</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>Utf8</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/views/web/error404.jsp</location>
  </error-page>
</web-app>
